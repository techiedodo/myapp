<%= form_for box do |f| %>
  <% if box.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(box.errors.count, "error") %>.</h4>
      <ul>
        <% box.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(box.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Name your trove" %>
  <% end %>
  <%= form_group_tag(box.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Please provide a description of your trove contents" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
