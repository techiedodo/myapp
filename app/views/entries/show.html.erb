
<h1><%= @entry.subject %></h1>
<div class="row well journal_index">
    <div class="col-md-10 col-md-offset-1">
    <%= link_to "All Journals", box_journals_path(@journal.box), class: 'btn btn-primary btn-xs' %>
    <%= link_to "Entries", journal_entries_path(@journal), class: 'btn btn-primary btn-xs' %>

    <div class="media well">
      <div class="media-body">
        <h4 class="media-heading">
          <%= @entry.body %>
          <h6 class="col-md-9"><%= link_to "Edit Entry", edit_journal_entry_path %></h6>
          <h6 class="col-md-3"><%= link_to "Delete Entry", [@journal, @entry], method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this entry?' } %></h6>
        </h4>
      </div>
    </div>
    </div>
</div>
